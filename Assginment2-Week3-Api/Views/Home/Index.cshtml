@using Assignment2_Week3_Application.Dtos;
@model PagedResult<Assignment2_Week3_Application.Catalog.Students.Dtos.Manage.StudentViewModel>;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Student management</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h2>Student management</h2>
        <div class="row col-lg-10">
            <label for="exampleFormControlSelect1" class="col-lg-2">Student name: </label>
            <input class="col-lg-4 mr-2" class="form-control-file" id="exampleFormControlFile1">
            <button class="col-lg-1" type="button" class="btn btn-primary">Search</button>
        </div>
        <br>
        <div class="row" style="margin: unset">
            <div class="row col-lg-6">

                <button class="col-lg-5 mr-2" type="button" class="btn btn-primary">Sort by Name</button>
                <button class="col-lg-5" type="button" class="btn btn-primary">Sort by Yob</button>
            </div>
            <button class="col-lg-2 offset-lg-4" type="button" class="btn btn-primary">Add new</button>

        </div>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Year of birth</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Yob</td>
                        <td>@item.Address</td>
                        <td>@item.Phone</td>
                        <td>Edit Delete</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
</body>
</html>
